 	} while (!ret && netif_queue_stopped(priv->dev) &&
@@ -588,7 +612,11 @@ void ipoib_ib_tx_completion(struct ib_cq
 	struct ipoib_dev_priv *priv = ctx_ptr;
 	bool ret;
 
+#ifdef HAVE_NAPI_RESCHEDULE
