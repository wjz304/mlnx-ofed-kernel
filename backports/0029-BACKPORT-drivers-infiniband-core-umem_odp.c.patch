+	int ret_val = 0;
+	struct interval_tree_node *node, *next;
+	struct ib_umem_odp *umem;
+
+	if (unlikely(start == last))
+		return ret_val;
+
+	for (node = interval_tree_iter_first(root, start, last - 1);
+			node; node = next) {
