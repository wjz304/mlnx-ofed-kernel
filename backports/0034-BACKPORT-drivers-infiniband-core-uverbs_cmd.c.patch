+	struct ib_uobject               *xrcd_uobj;
+#else
+	struct ib_uobject               *uninitialized_var(xrcd_uobj);
+#endif
 	struct ib_device *ib_dev;
 
 	obj = (struct ib_usrq_object *)uobj_alloc(UVERBS_OBJECT_SRQ, attrs,
