+#ifdef HAVE_DEVL_PORT_REGISTER
+	priv->flags |= MLX5_PRIV_FLAGS_MLX5E_LOCKED_FLOW;
+#endif
 	delete_drivers(dev);
 	if (priv->flags & MLX5_PRIV_FLAGS_DISABLE_ALL_ADEV)
+#ifdef HAVE_DEVL_PORT_REGISTER
+		goto out;
+
+	err = add_drivers(dev);
+
+out:
+	priv->flags &= ~MLX5_PRIV_FLAGS_MLX5E_LOCKED_FLOW;
+	return err;
+#else
 		return 0;
 
 	return add_drivers(dev);
+#endif
 }
 
